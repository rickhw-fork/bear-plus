<div id="editor-container">
  <div id="button-container">
    <div id="info-btn" class="icon material-icons-outlined">info</div>
    <div class="btn-group dropleft">
      <div id="share-btn" type="button" class="icon material-icons-outlined" data-toggle="dropdown" data-offset="10, 10, 0, 0" aria-haspopup="true" aria-expanded="false">
        share
      </div>
      <ul id="share-panel" class="dropdown-menu dropdown-menu-left">
        <li class="dropdown-header">Sharing
          <span id="sharing-status"></span>
        </li>
        <li class="dropdown-header"><small>https://bear-plus.yenchenkuo.com/<%= profileId %>/</small></li>
        <li class="dropdown-item-text input-group input-group-sm">
          <%if ( profileId == userId) {%>
            <input id="note-shortUrl-input" type="text" class="form-control">
          <% } else { %>
            <input id="note-shortUrl-input" type="text" class="form-control" disabled="true">
          <% } %>
          <div class="input-group-btn">
            <button id="note-shortUrl-copy" class="btn btn-outline-secondary btn-sm" type="button">Copy</button>
          </div>
          <div class="input-group-btn">
            <button id="note-shortUrl-save" class="btn btn-outline-success btn-sm" type="button">Save</button>
          </div>
          <div id="sharing-msg"></div>
        </li>
        <%if ( profileId == userId) {%>
        <li class="dropdown-divider"></li>
        <li class="dropdown-header">Note Permission</li>
        <li class="dropdown-item-text permission-select">
          <div class="input-group input-group-sm">
            <div class="input-group-prepend">
              <label class="input-group-text">Read</label>
            </div>
            <select class="custom-select" id="permission-read">
              <option value="public">Public</option>
              <option value="private">Private</option>
            </select>
          </div>
        </li>
        
        <li class="dropdown-item-text permission-select">
          <div class="input-group input-group-sm">
            <div class="input-group-prepend">
              <label class="input-group-text">Write</label>
            </div>
            <select class="custom-select" id="permission-write">
              <option value="public">Public</option>
              <option value="private">Private</option>
            </select>
          </div>
        </li>
        <% } %>
    </div>
    <div id="history-btn" class="icon material-icons-outlined">history</div>
    <div id="menu-btn" class="icon material-icons-outlined">palette</div>
  </div>
  
  <div id="editor-tool">
    <button id="view-source-btn">View Source</button>
    <form id="commit">
      Commit message: 
      <input type=text id=message name=message> 
      <button id=commitbutton type="submit">commit</button>
    </form>
    <div id="commits" style="margin-bottom: 23px"></div>
  </div>
  <div id="editor" style="margin-bottom: 0"></div>
  <div style="display: none">
    <textarea id="content"></textarea>
  </div>
</div>
